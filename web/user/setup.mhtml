<%args>
	$person
	$person_settings
	$session
</%args>

	<& "/user/menu.mas",
		person          => $person,
		person_settings => $person_settings
	&>

	<div class="main">

		<h2 class="centeralign padvertmore">
			Welcome to Tabroom.com
		</h2>

		<h6 class="orangetext martopmore marbottommore centeralign">
			Are you new to Tabroom?
			The <span class="inline fa fa-sm fa-question-circle "></span> icon
			at the top right links to the manual
			<span class="inline-block fa fa-sm fa-arrow-up fa-rotate-45"></span>
		</h6>

		<div class="ninetenths nospace automargin martopmuchmore">

			<h5 class="martopmore">
				Are you a coach or program director?
			</h5>

			<div class="row flexrow">
				<span class="threefifths semibold padleft">
					To register online for tournaments
				</span>

				<span class="twofifths centeralign padvert">
					<a class = "buttonwhite bluetext invert fourfifths semibold"
						href = "chapter/create.mhtml"
					>
						Create Institution
					</a>
				</span>
			</div>

			<div class="row flexrow">
				<span class="threefifths semibold padleft">
					To manage your own tournament with Tabroom
				</span>

				<span class="twofifths centeralign padvert">

					<a class = "buttonwhite bluetext invert fourfifths semibold"
						href = "tourn/request.mhtml"
					>
						Create Tournament
					</a>
				</span>
			</div>

			<h5 class="martopmore">
				Or a judge?
			</h5>

			<div class="row flexrow">
				<span class="threefifths semibold padleft">
					To use online ballots &amp; get assignment alerts
				</span>

				<span class="twofifths centeralign padvert">

					<a class = "buttonwhite bluetext invert fourfifths semibold"
						href = "judge/search.mhtml"
					>
						Link your Account
					</a>
				</span>
			</div>

			<h5 class="martopmore">
				Or are you a competitor?
			</h5>

			<div class="row flexrow">
				<span class="threefifths semibold padleft">
					Sign up for tournaments &amp; get assignment alerts
				</span>

				<span class="twofifths centeralign padvert">
					<a class = "buttonwhite bluetext invert fourfifths semibold"
						href="student/search.mhtml"
					>
						Link your Account
					</a>
				</span>
			</div>

		</div>

	</div>
