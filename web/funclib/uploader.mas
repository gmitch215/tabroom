<%args>
	$filename
	$ratio      => "quarter"
	$session
</%args>
<%init>

	use JSON -convert_blessed_universally;
    my $json = JSON->new->allow_nonref->convert_blessed;
    my $argsJSON = $json->pretty->encode(\%ARGS);

	my $long;
	my $short;

	if ($ARGS{"long"}) {
		$long = $ARGS{"long"};
		$short = $ARGS{"short"};
	} elsif ($ratio eq "quarter") {
		$long = "fivesixths";
		$short = "sixth";
	} elsif ($ratio eq "half") {
		$long = "half";
		$short = "half";
	}

	my $defaults = $session->default();

	my $now = DateTime->now();
	my $key = $defaults->{key}{$ARGS{"argkey"}}{$ARGS{argval}};

	unless (ref $key eq ref {}) {
		$key = {};
	}

	my $upload_key;

	my $dt = eval {
		my $dt = DateTime::Format::MySQL->parse_datetime($key->{timestamp});
		Tab::debuglog("Made a dt from key ".$key->{timestamp});
		if ($dt) {
			$dt->add(minutes => 15);
		}
		return $dt;
	};

	if ($dt && $dt > $now) {
		Tab::debuglog("key seems fine.  $dt vs $now");
		$upload_key = $key->{upload_key};
	} else {
		$upload_key = $m->comp("/funclib/generate_randomstring.mas", length => 17);
		$key->{upload_key} = $upload_key;
		$key->{timestamp} = DateTime::Format::MySQL->format_datetime($now);
		$defaults->{key}{$ARGS{"argkey"}}{$ARGS{argval}} = $key;

		Tab::debuglog("key seems not fine and so now it is $upload_key");

		$session->default($defaults);
		$session->update();
	}

</%init>


%	if ($ARGS{"url"}) {
		<form
			name     = "<% $filename %>"
			enctype  = "multipart/form-data"
			action   = "<% $ARGS{url} %>"
			method   = "post"
			<& "/funclib/confirm.mas", warn => $ARGS{warning}, action => "onSubmit" &>
		>
%	}

		<% $ARGS{"hidden"} %>

%		if ($ARGS{"from"}) {
			<input
				type  = "hidden"
				name  = "from"
				value = "<% $ARGS{"from"} %>"
			>
%		}

%		if ($upload_key) {
			<input
				type  = "hidden"
				name  = "key"
				value = "<% $upload_key %>"
			>
%		}

%		if ($ARGS{"argkey"} && $ARGS{"argval"}) {
			<input
				type  = "hidden"
				name  = "<% $ARGS{"argkey"} %>"
				value = "<% $ARGS{"argval"} %>"
			>
%		}

		<div class='flexrow'>
			<span class="<% $long %> nospace padvert">
				<div class="upload">
					<span class="uploadbutton buttonwhite bluetext invert thin">
						<span>Choose File</span>
						<input
							type     = "file"
							class    = "upload"
							id       = "<% $filename %>"
							name     = "<% $filename %>"
							onChange = "uploadName(this);"
						/>
					</span>
					<span
						class = "uploadname <% $filename %>"
						style = "-webkit-user-select: none;"
					>No file selected</span>
				</div>
			</span>

%	if ($ARGS{"url"}) {
			<span class="<% $short %> centeralign">
				<input
					type  = "submit"
					class = "nowrap full"
					value = "<% $ARGS{submit} ? $ARGS{submit} : "Upload" %>"
				>
			</span>
		</form>
%	} elsif ($ARGS{'save'}) {
		<span class="<% $short %> centeralign">
			<input
				type  = "submit"
				value = "<% $ARGS{submit} ? $ARGS{submit} : "Upload" %>"
			>
		</span>
%	}

	</div>
