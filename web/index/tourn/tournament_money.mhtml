<%args>
	$tourn_id
	$person
</%args>
<%init>

	my $key = $tourn_id;

	return if $m->cache_self(
		key        => $key,
		expires_in => '15m'
	);

	my $tourn = eval {
		return Tab::Tourn->retrieve($tourn_id);
	};

	unless ($tourn) {
		$m->comp("/funclib/abort.mas", message => "Invalid tournament ID ".$tourn_id);
	}

	my %tourn_settings = $tourn->all_settings;
	$m->abort unless $tourn_settings{"tmoney_enable"};

	my $switch;

	my $tz = $person->tz if $person;
	$tz = $tourn->tz if $tourn && not defined $tz;
	$tz = "UTC" unless $tz;

</%init>

	<div class="main">

		<& title.mas, tourn => $tourn &>

        <& tabbar.mas, tourn => $tourn &>

		<h4 class="centeralign">E-Payment instructions</h4>

		<div class="third top">
			<p>
				<% $tourn->name %> uses
					<a href="" target="_blank" rel="noopener noreferrer">
						Tournament Money
					</a>, the National Speech &amp; Debate Association's exclusive
					e-payments provider for Tabroom.com, to accept payments from
					registered attendees. 
					You may proceed to make a payment for your entry in any of the
					following ways:
					<ul>
						<li>
							Fees tab of your entry into this tournament:
							there is a button to make a payment
						</li>
						<li>
							PDF invoice for your entry into this tournament:
							there is a link to make a payment
						</li>
						<li>
							<a
								href="https://tournament.money/pay/tabroom/<% $tourn_id %>"
								target="_blank"
								rel="noopener noreferrer"
							>
								This tournament's Tournament Money payment page:
							</a>
							you'll be required to manually input your school's
							invoice/entry number to make a payment
						</li>
					</ul>
			</p>

			<p>
				Learn more:
				<ul>
                    <li>
                        <a
							href="/index/tournament_money.mhtml"
							target="_blank"
							rel="noopener noreferrer"
						>
                            Tournament Money &amp; Tabroom
                        </a>
                    </li>
                    <li>
                        <a
							href="https://tournament.money/pages/about"
							target="_blank"
							rel="noopener noreferrer"
						>
                            About Tournament Money
                        </a>
                    </li>
                    <li>
                        <a
							href="https://tournament.money/pages/onboarding"
							target="_blank"
							rel="noopener noreferrer"
						>
                            Use Tournament Money at your tournament
                        </a>
                    </li>
				</ul>
			</p>

		</div>

	</div>
